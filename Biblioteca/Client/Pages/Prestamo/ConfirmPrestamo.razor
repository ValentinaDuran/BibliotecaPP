@page "/confirm-prestamo"
@using Biblioteca.BD.Data.Entidades
<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">¿Está seguro de que desea borrar?</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancelar">Cancelar</MudButton>
        <MudButton Color="Color.Primary" OnClick="Confirmar">Aceptar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
     [Parameter] public Prestamo Prestamo { get; set; }
    private void Cancelar()
    {
        MudDialog.Cancel();
    }

    private void Confirmar()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }
}